<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

<form-beans>
<form-bean name="loginForm" type="com.mhmuftee.formbean.LoginForm"></form-bean>
</form-beans>

<action-mappings>
<action path="/login" name="loginForm" type="com.mhmuftee.actions.Login">
<forward name="success" path="/login/success.jsp"></forward>
<forward name="tryAgain" redirect="true" path="/login/redirect.jsp"></forward>
<forward name="failed" path="/login/failed.jsp"></forward>
</action>
</action-mappings>

</struts-config>